{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "files": {
        "includes": [
            "src/**"
        ],
        "experimentalScannerIgnores": [
            "src/db/generated/**"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2
    }
}